<div id="home">
    <!-- Start cSlider -->
    <div id="da-slider" class="da-slider">
        <div class="triangle"></div>
        <!-- mask elemet use for masking background image -->
        <div class="mask"></div>
        <!-- All slides centred in container element -->
        <div class="container">
            <!-- Start first slide -->
            <div class="da-slide">
                <h4>{#Installation_WorksOnAllDevices#}</h4>
                <p>{#Installation_WorksOnAllDevices_Description#}</p>
                <div class="da-img">
                    <img src="/Templates/{$Template}/images/installation/Slider01.png" alt="image01" width="320">
                </div>
            </div>
            <!-- End first slide -->
            <!-- Start second slide -->
            <div class="da-slide">
                <h4>{#Installation_Optimization_Header#}</h4>
                <p>{#Installation_Optimization_Description#}</p>
                <div class="da-img">
                    <img src="/Templates/{$Template}/images/installation/Slider02.png" width="320" alt="image02">
                </div>
            </div>
            <!-- End second slide -->
            <!-- Start third slide -->
            <div class="da-slide">
                <h4>{#Installation_OS_Header#}</h4>
                <p>{#Installation_OS_Description#}</p>
                <div class="da-img">
                    <img src="/Templates/{$Template}/images/installation/Slider03.png" width="320" alt="image03">
                </div>
            </div>
            <!-- Start third slide -->
            <!-- Start cSlide navigation arrows -->
            <div class="da-arrows">
                <span class="da-arrows-prev"></span>
                <span class="da-arrows-next"></span>
            </div>
            <!-- End cSlide navigation arrows -->
        </div>
    </div>
</div>